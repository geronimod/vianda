.panel.panel-default
  .panel-heading
    .row
      .col-md-7
        <%= chef.name %>

      .col-md-3.contact
        <a href="https://mail.google.com/mail/?view=cm&su=[VIANDA]&to=<%= chef.email %>" target="_blank"> @ </a>
        <a href="https://www.facebook.com/<%= chef.facebook %>" target="_blank">
        %i.icon-facebook-sign
        </a>

      .col-md-2
        <% if (isOwner) { %>
        %button(type="button" class="delete close" data-toggle="modal" aria-hidden="true" style="margin-left:3px")
          %icon.icon-trash
        %button(type="button" class="edit close" aria-hidden="true")
          %icon.icon-edit
        <% } else { %>
        %icon.icon-paperclip.paperclip
        <% } %>

  .panel-body 
    %table.table
      <% _.each(menus, function(menu){ %>
      %tr
        %td.lunch
          <%= menu.menu %> ... 
          %i.icon-usd 
          %span.price <%= menu.price %>
          <% if (menu.today) { %>
          %span.label.label-today.pull-right
            <%= menu.updated_at %>
          <% } else if (menu.yesterday) { %>
          %span.label.label-yesterday.pull-right
            <%= menu.updated_at %>
          <% } else { %>
          %span.label.label-older.pull-right
            <%= menu.updated_at %>
          <% } %>
      <% }); %>

    %ul.list-unstyled
      %li 
        <% if (bread_included) { %>
        %i.icon-gift
        Bread included
        <% } else { %>
        %i.icon-thumbs-down
        Bread not included
        <% } %>
      
      %li
        %i.icon-time 
        Order before  
        %strong <%= orders_before %>
        <%= orders_before > 11 ? 'pm' : 'am' %>
      
      %li
        <% if (free_shipping) { %>
        %i.icon-truck
        Free shipping
        <% } else { %>
        %i.icon-thumbs-down-alt
        Shipping not included        
        <% } %>

  .panel-footer 
    Suggested by
    <a href="http://mail.google.com/mail/?view=cm&su=[VIANDA]&to=<%= chef.user.email %>" target="_blank"><%= chef.user.fullname %></a>
