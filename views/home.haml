!!!
%html(lang="en")
  %head
    %title Vianda Lunch Board
    
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %meta(name="description" content="Vianda: share your lunch suggestion")
    %meta(name="author" content="Geronimo Diaz")
    
    %link(href="images/favicon.ico" rel="shortcut icon")
    %link(href="css/bootstrap.min.css" rel="stylesheet" media="screen")
    %link(href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet")
    %link(href="css/screen.css" rel="stylesheet" media="screen")

    %link(href='http://fonts.googleapis.com/css?family=Bad+Script' rel='stylesheet' type='text/css')
    %link(href='http://fonts.googleapis.com/css?family=PT+Sans+Narrow' rel='stylesheet' type='text/css')
    %link(href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css')
    %link(href='http://fonts.googleapis.com/css?family=Shadows+Into+Light+Two' rel='stylesheet' type='text/css')


  %body
    %header.navbar.navbar-inverse.navbar-fixed-top(role="banner")
      .container
        .row
          .col-md-6
            .navbar-header
              .header VIANDA
              %p Lunch Board
          .col-md-6
            .time.pull-right
              %i.icon-time
                %span#timer 12:00 AM

    %main.container(role="main")
      #subheader.row
        .col-md-1
          %a(href="#" class="btn btn-primary btn-sm new-suggestion")
            %i.icon-plus

      #main-container.row    

    %script(src="//code.jquery.com/jquery.js")
    %script(src="js/jquery.cookie.js")
    %script(src="js/jquery.ex.js")
    %script(src="js/underscore.min.js")
    %script(src="js/backbone.min.js")
    %script(src="js/bootstrap.min.js")
    %script(src="js/form2js.js")
    %script(src="js/app.js")

    %script#form(type="text/template")
      %form
        = haml :form
    %script#menu(type="text/template")
      = haml :menu
    %script#show(type="text/template")
      = haml :show
    %script#modal(type="text/template")
      = haml :modal  
    %script#alert(type="text/template")
      = haml :alert
    
  